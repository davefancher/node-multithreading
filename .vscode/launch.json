{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "resizeStrategy",
            "type": "pickString",
            "description": "Select a resize processing strategy",
            "options": [
                "00 - serial",
                "01 - parallel",
                "02 - workerThread",
                "03 - threadPool"
            ]
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Resize",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app.js",
            "args": [ "${workspaceFolder}\\images\\Stick Macro.jpg", "${input:resizeStrategy}" ],
            "outputCapture": "std"
        }
    ]
}